#!/sbin/runscript
# (C) Martin V\"ath <martin@mvath.de>

description='server to schedule and execute queued jobs'

start() {
	ebegin 'starting schedule-server'
	start-stop-daemon -S -b -N 9 -u nobody -g nobody -- schedule-server -k
	eend ${?}
}

stop() {
	ebegin 'stopping schedule-server'
	schedule stop-server || start-stop-daemon -K schedule-server
	eend ${?}
}
